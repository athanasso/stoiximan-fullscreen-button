{
  "manifest_version": 3,
  "name": "Video to Fullscreen Button",
  "version": "1.0",
  "description": "Adds a fullscreen button to small video live streams.",
  "content_scripts": [
    {
      "matches": [
        "*://*.stoiximan.gr/*",
        "*://*.stoiximan.com/*",
        "*://*.stoiximan.com.cy/*",
        "*://*.novibet.gr/*"
      ],
      "js": ["content.js"]
    }
  ],
  "permissions": ["activeTab"]
}
